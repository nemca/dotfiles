[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol,space-before-tab
    autocrlf = false
    safecrlf = true
    packedGitLimit = 128m
    packedGitWindowSize = 128m

[merge]
    tool = vimdiff
    log = true

[branch]
    autosetuprebase = always

[grep]
    linenumber = true

[push]
    #default = current
    default = simple

[pack]
    threads = 4
    deltaCacheSize = 1024m
    packSizeLimit = 1024m
    windowMemory = 1024m

[color]
    diff = yes
    ui = auto
    # ui = true
[color "branch"]
    #current = yellow reverse
    current = green reverse
    local = yellow
    remote = magenta
    upstream = magenta
[color "diff"]
    meta = yellow
    frag = magenta
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[color "grep"]
    linenumber = green
    match = green bold
    filename = magenta

[alias]
    st = status
    br = branch
    co = checkout
    di = diff
    dc = diff --cached
    ds = diff --staged
    ci = commit
    am = commit --amend
    amend = commit --amend -C HEAD
    undo = reset --soft HEAD^
    cp = cherry-pick
    lg = log -p
    rb = rebase
    last = log -1 HEAD
    lod = log --graph --decorate --format='%h %ad %s' --date=short
    lod = log --graph --decorate --format='%C(yellow)%h %Cred%d %Cgreen%ad %Creset%s' --date=short
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    hist = log --pretty=format:'%C(yellow)%h%C(21) %ad %C(15)%s%C(reset) %C(green)%d%C(reset) %C(75)[%an]' --graph --date=short --branches --all
    standup = log --since '1 day ago' --oneline --author <YOUREMAIL>
    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard

    # search commits by message
    search = "!f() { git log --all --grep=$1; }; f"

    fm = "!sh -c 'git show `git rev-list --ancestry-path $0..dev --merges | tail -f`'"

    tagcommit = rev-list -n 1

[diff]
    noprefix = true
    ignoreSubmodules = all

[help]
    autocorrect = 1
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
